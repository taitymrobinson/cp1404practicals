BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_max_x: 150
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert(input_number.text)
    Label:
        id: output_label
        text: app.km_output
        color: (1, 1, 0, 1)
        font_size: 48